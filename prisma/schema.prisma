generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  usename   String    @db.VarChar(100) // max length 100
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]
}

model Article {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(200) // max length 100
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  isAdmin   Boolean  @default(false)
  createdAT DateTime @default(now())
  updatedAT DateTime @updatedAt
  //relation betwenn Article and Comment tables
  userId    Int
  articleId Int
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  //one to many relation
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
